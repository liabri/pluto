#
# cgit config
#

virtual-root=/git

css=/git/cgit.css
logo=/git/cgit.png
favicon=git/favicon.ico

enable-http-clone=1

# prevents  webcrawlers (like google) indexing the site
robots=noindex, nofollow

about-filter=/usr/lib/cgit/filters/about-formatting.sh
readme=:README.md
enable-commit-graph=1
enable-log-filecount=1
enable-log-linecount=1
enable-index-links=1
enable-subject-links=1
max-stats=year

footer="contact me @ liabri@tuta.io"

clone-url=http://liambrincat.mt/git/$CGIT_REPO_URL ssh://git@liambrincat.mt/$CGIT_REPO_URL
snapshots=tar.gz tar.bz2 zip


##
## List of common mimetypes
##

mimetype.gif=image/gif
mimetype.html=text/html
mimetype.jpg=image/jpeg
mimetype.jpeg=image/jpeg
mimetype.pdf=application/pdf
mimetype.png=image/png
mimetype.svg=image/svg+xml


repository-sort=age
remove-suffix=1
scan-path=/home/git/repos
enable-git-config=1

root-desc=projects from 2017 until the present all centralised in one place.
root-title=liabri's git directory
